{
    "fortran.linter.includePaths": [
        "${workspaceFolder}/build/gfo*"
    ],
    "fortran.linter.fypp.enabled": true,
    "fortran.fortls.excludeDirectories": [
        "build",
        "doc/**"
    ],
    "fortran.formatting.findentArgs": [
        "--refactor_end",
        "-i3"
    ],

    // Rulers
    "[FortranFixedForm]":{
        "editor.tabSize":6,
        "editor.rulers": [
            {
                "column": 5,
                "color": "yellow"
            },
            {
                "column": 6,
                "color": "green"
            },
            {
                "column": 72,
                "color": "red"
            }
        ],
    },
    "[FortranFreeForm]":{
        "editor.tabSize":4,
        "editor.rulers": [
            {
                "column": 80,
                "color": "green"
            }
        ]
}
}
